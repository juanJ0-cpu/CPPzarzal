//1)
//Respuesta :
#include <iostream>

int max3(int a, int b, int c) {
    if (a >= b) {
        if (a >= c) return a;
        else return c;
    } else {
        if (b >= c) return b;
        else return c;
    }
}

int main() {
    int a, b, c;
    std::cout<<"Escribe tres numeros enteros: " "\n";
    if (!(std::cin >> a >> b >> c)) return 0;
    std::cout << "El numero entero mayor es: " << max3(a, b, c) << "\n";
    return 0;
}

//2)
//Respuesta:
#include <iostream>

int sumaRango(int a, int b) {
    int suma = 0;
    for (int i = a; i <= b; ++i) {
        suma += i;
    }
    return suma;
}

int main() {
    int a, b;
    std::cout<<"Escribe el rango de la suma que quieres hacer: (primero el minimo despues el maximo) " "\n";
    if (!(std::cin >> a >> b)) return 0;
    std::cout << "Resultado: " << sumaRango(a, b) << '\n';
    return 0;
}

//3)
//Respuesta: 
#include <iostream>

bool contieneDigito(int n, int d) {
    if (n == 0) return d == 0;
    while (n > 0) {
        if (n % 10 == d) return true;
        n /= 10;
    }
    return false;
}

int main() {
    int n, d;
    std::cout << "Introduce un numero entero en 'n' que sea mayor a 0 y despues un numero en 'd' (dígito 0-9) que contenga 'n'.\n";
    std::cout << "El programa mostrará true si d aparece en los dígitos de n. ejemplo n: 1234 d: 2  \n";
    if (!(std::cin >> n >> d)) return 0;
    std::cout << std::boolalpha << "Resultado: " << contieneDigito(n, d) << '\n';
    return 0;
}

//4)
//Respuesta: 
#include <iostream>

void tablaMultiplicar(int n) {
    for (int i = 1; i <= 10; ++i) {
        std::cout << n << " x " << i << " = " << (n * i) << '\n';
    }
}

int main() {
    int n;
    std::cout<<"imprimir tabla del: ";
    if (!(std::cin >> n)) return 0;
    tablaMultiplicar(n);
    return 0;
}

